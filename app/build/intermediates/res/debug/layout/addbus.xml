<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/dest_busno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Route No"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/dest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dest_busno"
        android:layout_centerHorizontal="true"
        android:hint="Route Name"
        android:layout_marginTop="30dp"
        android:ems="10" />

    <EditText
        android:id="@+id/dest_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dest_time"
        android:layout_centerHorizontal="true"
        android:hint="Vechile No"
        android:layout_marginTop="30dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dest_busno"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:hint="Bus No"
        android:ems="10" />

    <Button
        android:id="@+id/addbus_press"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dest_distance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:onClick="clicked"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Enter Bus Details"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
